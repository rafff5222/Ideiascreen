# API Keys - Serviços pagos com planos gratuitos
ELEVENLABS_API_KEY=suachave         # Limite gratuito: ~10.000 caracteres/mês
OPENAI_API_KEY=suachave             # Preço sob demanda, sem plano gratuito fixo
PEXELS_API_KEY=suachave             # Limite gratuito: 200 requisições/hora

# API Keys Alternativas - 100% Gratuitas
HUGGINGFACE_API_KEY=suachave        # API gratuita da Hugging Face (alternativa à OpenAI)
PIXABAY_API_KEY=suachave            # API gratuita da Pixabay (alternativa ao Pexels)
UNSPLASH_API_KEY=suachave           # API gratuita do Unsplash (alternativa ao Pexels)

# Configurações de Serviços
# Use 'openai', 'huggingface', ou 'ollama'
AI_SERVICE_PROVIDER=openai          
# Use 'elevenlabs' ou 'edge-tts'
VOICE_SERVICE_PROVIDER=elevenlabs   
# Use 'pexels', 'pixabay', ou 'unsplash'
IMAGE_SERVICE_PROVIDER=pexels       

# Configurações de Geração
MAX_SCRIPT_LENGTH=500
FFMPEG_PATH=./ffmpeg

# Configurações de Cache e Optimização
CACHE_TTL=3600
ENABLE_REQUEST_COMPRESSION=true
VIDEO_CACHE_SIZE_MB=100
MAX_CONCURRENT_GENERATIONS=3